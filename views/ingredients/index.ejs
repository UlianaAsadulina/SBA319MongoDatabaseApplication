    <table style="border-collapse: collapse;">
        <thead>
            <tr>
                <th style="text-align: left; padding: 10px;">Name</th>
                <th style="text-align: left; padding: 10px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% ingredients.forEach(ingredient => { %>
                <tr>
                    <td style="padding: 10px;">
                        <a href="/ingredients/<%= ingredient._id %>" aria-label="View <%= ingredient.name %>">
                            <%= ingredient.name %>
                        </a>
                    </td>
                    <td style="padding: 10px;">
                        <a href="/ingredients/<%= ingredient._id %>/edit">
                            <button>Edit</button>
                        </a>
                        
                        <form action="/ingredients/<%= ingredient._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h3>Add New Elixir Ingredient</h3>
    <form action="/ingredients" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" />
        <button type="submit">Add Ingredient</button>
    </form>
